<!-- Modal  FOR LOG IN SCREEN -->

<div class="modal fade" id="login">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">User Login</h4>
      </div>

      <form method="post" action="/login">
      <div class="modal-body">
         <h4 class="margin-top-20">Username</h4>
      <div class="margin-top-20">
          <input
            name="username"
            type="text"
            id="username"
            class="form-control"
            placeholder="Username" />
        </div>
         <h4 class="margin-top-20">Password</h4>
        <div class="margin-top-20">
          <input
            name="password"
            type="password"
            id="email_address"
            class="form-control"
            placeholder="Password" />
        </div>
      </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button id="save-login" type="submit" class="btn btn-primary">Save</button>


        </div>
      </form>
    </div>
  </div>
</div>

<!-- Modal for Login Screen -->
<!-- Modal  FOR NEW USER-->

<div class="modal fade" id="add-user">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Create a New User Login</h4>
      </div>

      <form method="post" action="/newuser">

        <div class="modal-body">
          <h4>First Name</h4>
          <div class="margin-top-20">
            <input name="firstname"
              id="first-name"
              class="form-control"
              placeholder="First Name" />
          </div>
          <h4 class="margin-top-20">Last Name</h4>
          <div class="margin-top-20">
            <input
              name="lastname"
              id="last-name"
              class="form-control"
              placeholder="Last Name" />
          </div>
          <h4 class="margin-top-20">Email Address</h4>
          <div class="margin-top-20">
            <input
              name="emailaddress"
              type="text"
              id="email_address"
              class="form-control"
              placeholder="Name@Somecompany.com" />
          </div>
           <h4 class="margin-top-20">Username</h4>
          <div class="margin-top-20">
            <input
              name="username"
              type="text"
              id="newusername"
              class="form-control"
              placeholder=" New Username" />
          </div>
           <h4 class="margin-top-20">Password</h4>
          <div class="margin-top-20">
            <input
              name="password"
              type="password"
              id="password"
              class="form-control"
              placeholder=" New Password" />
          </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button id="save-user" type="submit" class="btn btn-primary">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>

